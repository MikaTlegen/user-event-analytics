						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Jane Doe Updated\",\n  \"email\": \"jane.updated@example.com\",\n  \"userRole\": \"ADMIN_ROLE\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/users/{{user_id}}",
