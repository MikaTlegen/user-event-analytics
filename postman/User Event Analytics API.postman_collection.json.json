		{
			"name": "User Events",
			"item": [
				{
					"name": "Create Event",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"const userId = pm.environment.get('user_id') || pm.collectionVariables.get('last_created_user_id') || '1';",
									"if (userId) {",
									"    console.log('Using userId:', userId);",
									"    pm.variables.set('current_user_id', userId);",
									"} else {",
									"    console.warn('No user_id found. Please create a user first.');",
									"}"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('event_id', response.id);",
									"    pm.collectionVariables.set('last_created_event_id', response.id);",
									"    console.log('Created event with ID:', response.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"userId\": {{current_user_id}},\n  \"eventType\": \"LOGIN\",\n  \"timeStamp\": \"{{$isoTimestamp}}\",\n  \"details\": \"User performed login action\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/events",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"events"
							]
						},
						"description": "Create a new user event"
					},
					"response": []
				},
